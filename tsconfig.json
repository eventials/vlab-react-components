{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "./src/lib"
  ]
}